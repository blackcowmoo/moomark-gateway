{
  "name": "gateway",
  "version": "0.0.1",
  "description": "Moo-mark Gateway",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src --out-dir dist --copy-files --extensions \".ts,.tsx\"",
    "dev": "NODE_ENV=test nodemon src/index.ts --legacy-watch src/* --exec babel-node --extensions \".ts,.tsx\"",
    "start": "node ./dist/index.js",
    "test": "NODE_ENV=test mocha -t 10000 -r ./src/test/utils/babel.js ./src/test/*.test.ts ./src/test/**/*.test.ts",
    "test:report": "NODE_ENV=test mocha --reporter json -t 10000 -r ./src/test/utils/babel.js ./src/test/*.test.ts ./src/test/**/*.test.ts > ./test-results.json",
    "test:report:coverage": "NODE_ENV=test nyc --reporter=json mocha --reporter json -t 10000 -r ./src/test/utils/babel.js ./src/test/*.test.ts ./src/test/**/*.test.ts > ./test-results.json",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "type-check": "tsc -p tsconfig.json --noEmit --esModuleInterop"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/register": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/superagent": "^4.1.11",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "apollo-server-env": "^4.2.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.13",
    "@graphql-tools/utils": "^8.6.12",
    "apollo-server-core": "3.7.0",
    "apollo-server-express": "3.7.0",
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "superagent": "^6.1.0"
  }
}
